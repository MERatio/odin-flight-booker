<div class="row justify-content-center">
  <div class="col-md-6 mb-4">
    <h2 class="text-center">Book or Search Flights</h2>
    <%= render 'search_form' %>
  </div>
  <div class="col-md-10">
    <h2 class="text-center mb-4">
      <% if @num_of_tickets %>
        Flights based on your search (<%= @flights.count %>)
      <% else %>
        Flights (<%= @flights.count %>)
      <% end %>
    </h2>
    <%= render 'flights' %>
  </div>
</div>