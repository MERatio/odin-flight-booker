<%= form_with model: @booking do |f| %>
  <%= f.hidden_field :flight_id, value: @flight.id %>
  <%= f.hidden_field :num_of_tickets, value: @num_of_tickets %>
  <% @booking.passengers.each_with_index do |passenger, i| %>
    <%= f.fields_for :passengers, passenger do |passenger_form| %>
      <p class="h3"><%= (i+1).ordinalize %> passenger</p>
      <div class="form-group">
        <%= passenger_form.label :name %>
        <%= passenger_form.text_field :name, class: 'form-control', required: true %>
      </div>
      <div class="form-group">
        <%= passenger_form.label :email %>
        <%= passenger_form.email_field :email, class: 'form-control', required: true %>
      </div>
    <% end %>
  <% end %>
  <%= f.submit 'Book', class: 'btn btn-primary btn-block' %>
<% end %>